{{ template "header.html.tmpl" . }}
<h1>Pledge</h1>

<h2>Select the item you're going to boycott</h2>

<form action="/pledge" method="post">

<select name="item" required>
    {{ range .Items }}
    <option value="{{.Id}}"> {{ .Company }} {{ .Make }} {{ .Model }} </option>
    {{ end }}
</select>

<input type="submit" value="Submit">

</form>
{{ template "footer.html.tmpl" . }}
